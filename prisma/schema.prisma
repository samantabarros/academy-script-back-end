// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    String @id @default(uuid())
  email String //usuario login
  senha String

  @@map("usuarios") //Nome da tabela
}

//model Matricula (AlunoModulo)
model Aluno {
  id              String      @id @default(uuid())
  nome_aluno      String
  cpf             String      @unique
  data_nascimento String
  Matricula       Matricula[]

  @@map("alunos") //Nome da tabela
}

model Modulo {
  id          String      @id @default(uuid())
  nome_modulo String
  Matricula   Matricula[]

  @@map("modulos") //Nome da tabela
}

model Matricula {
  id        String  @id @default(uuid())
  nota1     Float
  nota2     Float
  nota3     Float
  id_aluno  String
  alunoId   Aluno?  @relation(fields: [id_aluno], references: [id])
  id_modulo String
  moduloId  Modulo? @relation(fields: [id_modulo], references: [id])

  @@map("matriculas")
}
